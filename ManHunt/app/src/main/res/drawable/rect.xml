<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30000000" /> <!-- Semi-transparent black color for shadow -->
            <corners android:radius="100dp" /> <!-- Rounded corners with a radius of 10dp -->
        </shape>
    </item>

    <!-- Rounded Rectangle -->
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#87BD51" /> <!-- Black color -->
            <corners android:radius="100dp" /> <!-- Rounded corners with a radius of 10dp -->
        </shape>
    </item>
</layer-list>
